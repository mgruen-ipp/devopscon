node {
    def mvnHome

    node {
        jdk = tool name: 'JDK8'
        env.JAVA_HOME = "${jdk}"
    }

    stage('Preparation') { 
        git 'https://github.com/nirkoren/devopscon.git'
        mvnHome = tool 'M3'
    }
    stage('Build') {

        withEnv(["MVN_HOME=$mvnHome"]) {
            if (isUnix()) {
                sh '"$MVN_HOME/bin/mvn" clean install -Pci'
            } else {
                bat(/"%MVN_HOME%\bin\mvn"  clean install -Pci/)
            }
        }
    }
    stage('Results') {
        tools {
            jdk "JDK8"
        }

        junit '**/target/surefire-reports/TEST-*.xml'
    }
}
